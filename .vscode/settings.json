{
    "files.watcherExclude": {
        "**/.*.*.cmd": true,
        "**/.*.d": true,
        "**/.*.o": true,
        "**/cscope.out": true,
        "**/tags": true,
	"**/.git": true,
	".vscode-ctags": true,
	"System.map": true,
	".tmp_System.map": true,
	"Module.symvers": true,
	"abi_gki_*": true,
	"**/arch/alpha/**": true,
	"**/arch/arc/**": true,
	"**/arch/arm/**": true,
	"**/arch/c6x/**": true,
	"**/arch/csky/**": true,
	"**/arch/h8300/**": true,
	"**/arch/hexagon/**": true,
	"**/arch/ia64/**": true,
	"**/arch/loongarch/**": true,
	"**/arch/m68k/**": true,
	"**/arch/microblaze/**": true,
	"**/arch/mips/**": true,
	"**/arch/nds32/**": true,
	"**/arch/nios2/**": true,
	"**/arch/openrisc/**": true,
	"**/arch/parisc/**": true,
	"**/arch/powerpc/**": true,
	"**/arch/riscv/**": true,
	"**/arch/s390/**": true,
	"**/arch/sh/**": true,
	"**/arch/sparc/**": true,
	"**/arch/um/**": true,
	"**/arch/unicore32/**": true,
	"**/arch/x86/**": true,
	"**/arch/xtensa/**": true,
	"**/scripts/**": true
    },
    "files.exclude": {
        "**/.*.*.cmd": true,
        "**/.*.d": true,
        "**/.*.o": true,
        "**/cscope.out": true,
        "**/tags": true,
	"**/.git": true,
	".vscode-ctags": true,
	"System.map": true,
	".tmp_System.map": true,
	"Module.symvers": true,
	"abi_gki_*": true,
	"**/arch/alpha/**": true,
	"**/arch/arc/**": true,
	"**/arch/arm/**": true,
	"**/arch/c6x/**": true,
	"**/arch/csky/**": true,
	"**/arch/h8300/**": true,
	"**/arch/hexagon/**": true,
	"**/arch/ia64/**": true,
	"**/arch/loongarch/**": true,
	"**/arch/m68k/**": true,
	"**/arch/microblaze/**": true,
	"**/arch/mips/**": true,
	"**/arch/nds32/**": true,
	"**/arch/nios2/**": true,
	"**/arch/openrisc/**": true,
	"**/arch/parisc/**": true,
	"**/arch/powerpc/**": true,
	"**/arch/riscv/**": true,
	"**/arch/s390/**": true,
	"**/arch/sh/**": true,
	"**/arch/sparc/**": true,
	"**/arch/um/**": true,
	"**/arch/unicore32/**": true,
	"**/arch/x86/**": true,
	"**/arch/xtensa/**": true,
	"**/scripts/**": true
	},
    "[c]": {
        "editor.detectIndentation": false,
        "editor.tabSize": 8,
        "editor.insertSpaces": false,
        "editor.rulers": [80],
        "editor.links": false
    },
    "files.associations": {
        "*.h": "c",
        "array": "c",
        "chrono": "c",
        "compare": "c",
        "functional": "c",
        "istream": "c",
        "ostream": "c",
        "ratio": "c",
        "tuple": "c",
        "type_traits": "c",
        "utility": "c",
        "memory": "c",
        "semaphore": "c",
        "shared_mutex": "c",
        "stop_token": "c",
        "condition_variable": "c",
        "random": "c",
        "limits": "c",
        "valarray": "c",
        "*.inc": "c",
        "atomic": "c",
        "cstdint": "c",
        "*.tcc": "c",
        "*.def": "c",
        "string": "c",
        "string_view": "c",
        "hash_map": "c",
        "bitset": "c",
        "initializer_list": "c",
        "optional": "c",
        "system_error": "c",
        "variant": "c",
        "typeindex": "cpp",
        "typeinfo": "cpp",
        "hash_set": "c",
        "numbers": "c",
        "memory_resource": "c"
    },
    //global variable color setting
    "editor.semanticTokenColorCustomizations": {
        "enabled": true,
        "rules": {
            // MS cpptools lsp
            "variable.global": {
                "foreground": "#9932cc", // violet
                "fontStyle": "italic"
            },
            // clangd lsp
            "variable.globalScope": {
                "foreground": "#9932cc", // violet
                "fontStyle": "italic"
            }
        }
    },
    "C_Cpp.errorSquiggles": "Disabled"
}
